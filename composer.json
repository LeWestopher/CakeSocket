{
    "name": "your-name-here/CakeSockets",
    "description": "CakeSockets plugin for CakePHP",
    "type": "cakephp-plugin",
    "require": {
        "php": ">=5.4.16",
        "cakephp/cakephp": "~3.0",
        "cboden/ratchet": "^0.3.3"
    },
    "require-dev": {
        "phpunit/phpunit": "*"
    },
    "autoload": {
        "psr-4": {
            "CakeSockets\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CakeSockets\\Test\\": "tests",
            "Cake\\Test\\": "./vendor/cakephp/cakephp/tests"
        }
    }
}
